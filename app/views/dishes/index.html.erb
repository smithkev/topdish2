<div class="page-header">
  <h1>Dishes</h1>
</div>

<p><a href="/dishes/new" class="btn btn-primary">Add a New Dish</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Category</th>
      <th>Name</th>
      <th>Restaurant</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= dish.category.name %></td>
        <td><%= dish.name %></td>
        <td><%= dish.restaurant.name %></td>
        <td>
          <a href="/dishes/<%= dish.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/dishes/<%= dish.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_dish/<%= dish.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

