<% if @dish.errors.any? %>
  <% @dish.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Edit Dish #<%= @dish.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_dish/<%= @dish.id %>" class="form-horizontal">
      <!-- Label and input for category_id -->
      <div class="form-group">
        <label for="category_id" class="col-sm-2 control-label">
          Category
        </label>
        <div class="col-sm-10">
          <input type="text" id="category_id" name="category_id" placeholder="Category" class="form-control" value="<%= @dish.category_id %>">
        </div>
      </div>

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="col-sm-2 control-label">
          Name
        </label>
        <div class="col-sm-10">
          <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @dish.name %>">
        </div>
      </div>

      <!-- Label and input for restaurant_id -->
      <div class="form-group">
        <label for="restaurant_id" class="col-sm-2 control-label">
          Restaurant
        </label>
        <div class="col-sm-10">
          <%= select_tag(:restaurant_id, options_from_collection_for_select(Restaurant.all, :id, :name, @dish.restaurant_id), :class => "form-control") %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Dish" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

