<% if @meal.errors.any? %>
  <% @meal.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Add Meal</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_meal" class="form-horizontal">
      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="col-sm-2 control-label">
          User
        </label>
        <div class="col-sm-10">
          <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @meal.user_id %>">
        </div>
      </div>

      <!-- Label and input for dish_id -->
      <div class="form-group">
        <label for="dish_id" class="col-sm-2 control-label">
          Dish
        </label>
        <div class="col-sm-10">
          <input type="text" id="dish_id" name="dish_id" placeholder="Dish" class="form-control" value="<%= @meal.dish_id %>">
        </div>
      </div>

      <!-- Label and input for rating -->
      <div class="form-group">
        <label for="rating" class="col-sm-2 control-label">
          Rating
        </label>
        <div class="col-sm-10">
          <input type="text" id="rating" name="rating" placeholder="Rating" class="form-control" value="<%= @meal.rating %>">
        </div>
      </div>

      <!-- Label and input for image -->
      <div class="form-group">
        <label for="image" class="col-sm-2 control-label">
          Image
        </label>
        <div class="col-sm-10">
          <input type="text" id="image" name="image" placeholder="Image" class="form-control" value="<%= @meal.image %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Create Meal" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

